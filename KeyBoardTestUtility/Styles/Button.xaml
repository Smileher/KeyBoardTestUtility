<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="KeyButton" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}" >
        <Setter Property="Height" Value="45"></Setter>
        <Setter Property="Width" Value="45"></Setter>
        <Setter Property="Margin" Value="2"></Setter>
    </Style>
    <Style x:Key="KeyButtonNoPadding" TargetType="Button" BasedOn="{StaticResource KeyButton}" >
        <Setter Property="Padding" Value="0"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="CustomTextBlockStyle">
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="FontStyle" Value="Italic"/>
    </Style>
</ResourceDictionary>
